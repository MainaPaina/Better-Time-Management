<div class="container main-content">
	<!-- Your existing admin content goes here without the backticks -->
	<div class="page-header">
		<h1 class="page-title">
			<i class="fas fa-users-cog"></i> User Management
		</h1>
		<p class="page-subtitle">Manage users, and their roles</p>
	</div>

	<%- include('../partials/menu', { activePage, activeSubPage }) %>

	<div class="cards cards-1">
		<div class="card">
			<div class="card-header">
				<h2>
					<div class="card-icon">
						<i class="fas fa-users-cog"></i>
					</div>
					List of Users
				</h2>
				<div class="card-actions">
					<a href="/admin/users/create">
						<i class="fas fa-user-plus"></i> Create User
					</a>
				</div>
			</div>
			<div class="card-body">
				<table id="usersTable">
					<thead>
						<tr>
							<th>
								<input type="checkbox" id="selectAllUsers" class="form-check-input">
							</th>
							<th>
								<i class="fas fa-id-badge"></i> Username
							</th>
							<th>
								<i class="fas fa-user"></i> Full Name
							</th>
							<th>
								<i class="fas fa-envelope"></i> Email
							</th>
							<th>
								<i class="fas fa-user-tag"></i> Roles
							</th>
							<th>
								<i class="fas fa-sitemap"></i> Department
							</th>
							<th>
								<i class="fas fa-clock"></i> Status
							</th>
							<th>
								<i class="fas fa-calendar"></i> Last Login
							</th>
							<th>
								<i class="fas fa-cogs"></i> Actions
							</th>
						</tr>
					</thead>
					<tbody>
						<% if (typeof users !== 'undefined' && users.length > 0) { %>
						<% users.forEach(user => { %>
                        <tr data-user-id=""
							<%= user.id %>" data-role="<%= user.role %>" data-status="<%= user.active ? 'active' : 'inactive' %>">
							<td>
								<input type="checkbox" class="user-select form-check-input">
							</td>
							<td>
								<%= user.username %>
							</td>
							<td>
								<%= user.name %>
							</td>
							<td>
								<%= user.email %>
							</td>
							<td>
								<%
                                if (user.roles && user.roles.length > 0) {
								user.roles.forEach(role => {
								%>
								<span class="badge"
									<%= (role === 'admin' ? 'bg-danger' : (role === 'manager' ? 'bg-warning' : 'bg-info')) %>"><%= role.charAt(0).toUpperCase() + role.slice(1) %>
								</span>
								<%
                                    });
								} else {
								user.role = 'guest'; // Default role if none is assigned
								}
								%>
							</td>
							<td>
								<% if (user.departments && user.departments.name) { %><%= user.departments.name %><% } else { %>Not Assigned<% } %>
							</td>
							<td>
								<span class="badge"
									<%= user.active ? 'bg-success' : 'bg-secondary' %>">
									<%= user.active ? 'Active' : 'Inactive' %>
								</span>
							</td>
							<td>
								<%= user.lastlogin_at ? new Date(user.lastlogin_at).toLocaleString() : 'Never' %>
								</td>
							<td>
								<div class="button-group">
									<a href="/admin/users/view/<%= user.id %>" class="btn btn-info" title="Show user details">
										<i class="fas fa-user-pen"></i>
									</a>
									<a href="#" class="btn btn-danger delete-user" data-user-id="<%= user.id %>" data-user-name="<%= user.name %>" title="Delete user">
										<i class="fas fa-trash"></i>
									</a>
								</div>
							</td>
						</tr>
						<% }); %>
                <% } else { %>
                    <tr>
							<td colspan="9" class="text-center">No users found</td>
						</tr>
						<% } %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
