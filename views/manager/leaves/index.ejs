<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-users-cog"></i> Manage User Leaves
    </h1>
    <p class="page-subtitle">Manage leaves, Approve or reject their requests</p>
</div>

<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Type</th>
                    <th>Days</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (leaves.length === 0) { %>
                    <tr>
                        <td colspan="6" class="text-center">No leave history available.</td>
                    </tr>
                <% } else { %>
                    <% leaves.forEach(leave => { %>
                        <tr>
                            <td><%= leave.name%></td>
                            <td><%= new Date(leave.start_date).toLocaleDateString() %></td>
                            <td><%= new Date(leave.end_date).toLocaleDateString() %></td>
                            <td><%= leave.leave_type %></td>
                            <td><%= leave.days || 'N/A' %></td>
                            <td><%= leave.status %></td>
                            <td>
                                <button class="btn btn-secondary" data-id="<%= leave.id %>" onclick="document.getElementById('leaveRequestForm').submit()">Edit</button>
                                <button class="btn btn-danger cancel-leave" data-id="<%= leave.id %>">Cancel</button> 
                            </td>
                        </tr>
                        <% }); %>
                    <% } %>
            </tbody>
        </table>
    </div>
</div>