<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Timesheets</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>

    <!-- Page specific styles -->
    <link rel="stylesheet" href="/css/admin.css">

    <div class="container main-content">
        <div class="page-header">
            <h1><i class="fas fa-user-shield"></i> Admin Dashboard</h1>
            <p class="lead">Manage employee timesheets and track compliance</p>
        </div>
        
        <div class="admin-controls">
            <div class="filter-controls">
                <label for="employeeFilter">
                    <i class="fas fa-user-friends"></i> Filter by Employee:
                </label>
                <select id="employeeFilter" class="form-select">
                    <option value="all">All Employees</option>
                </select>
                
                <label for="statusFilter">
                    <i class="fas fa-tasks"></i> Filter by Status:
                </label>
                <select id="statusFilter" class="form-select">
                    <option value="all">All Status</option>
                    <option value="missing">Missing</option>
                    <option value="submitted">Submitted</option>
                    <option value="leave">On Leave</option>
                </select>
                
                <label for="dateRange">
                    <i class="fas fa-calendar-alt"></i> Date Range:
                </label>
                <div class="date-range-inputs">
                    <input type="date" id="startDate" class="form-control">
                    <input type="date" id="endDate" class="form-control">
                </div>
                
                <button id="applyFilters" class="btn btn-primary">
                    <i class="fas fa-filter"></i> Apply Filters
                </button>
            </div>
            
            <div class="summary-container">
                <div class="summary-box missing">
                    <div class="summary-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="summary-content">
                        <h3>Missing Timesheets</h3>
                        <p id="missingCount">0</p>
                    </div>
                </div>
                <div class="summary-box employees">
                    <div class="summary-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="summary-content">
                        <h3>Total Employees</h3>
                        <p id="employeeCount">0</p>
                    </div>
                </div>
                <div class="summary-box hours">
                    <div class="summary-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="summary-content">
                        <h3>Avg. Hours/Day</h3>
                        <p id="avgHours">0</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="table-responsive">
            <table id="timesheetTable" class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-user"></i> Employee Name</th>
                        <th><i class="fas fa-calendar"></i> Date</th>
                        <th><i class="fas fa-clock"></i> Hours Worked</th>
                        <th><i class="fas fa-info-circle"></i> Status</th>
                        <th><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% timesheets.forEach(timesheet => { %>
                        <tr class="<%= timesheet.missing ? 'table-warning' : '' %> status-<%= timesheet.status %>">
                            <td><%= timesheet.employeeName %></td>
                            <td><%= timesheet.date.toDateString() %></td>
                            <td>
                                <% if(timesheet.status === 'leave') { %>
                                    <span class="badge bg-primary leave-badge">On Leave</span>
                                <% } else { %>
                                    <%= timesheet.hoursWorked %>
                                <% } %>
                            </td>
                            <td>
                                <span class="badge <%= timesheet.status === 'missing' ? 'bg-danger' : timesheet.status === 'submitted' ? 'bg-success' : 'bg-primary' %>">
                                    <%= timesheet.status.charAt(0).toUpperCase() + timesheet.status.slice(1) %>
                                </span>
                            </td>
                            <td>
                                <% if(timesheet.missing) { %>
                                    <button class="btn btn-warning btn-sm remind-btn" data-employee="<%= timesheet.employeeId %>">
                                        <i class="fas fa-bell"></i> Send Reminder
                                    </button>
                                <% } else if(timesheet.status === 'submitted') { %>
                                    <button class="btn btn-success btn-sm approve-btn" data-timesheet-id="<%= timesheet.employeeId %>_<%= timesheet.date.toISOString() %>">
                                        <i class="fas fa-check"></i> Approve
                                    </button>
                                <% } else { %>
                                    <span class="text-muted"><i class="fas fa-check-circle"></i> No action needed</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        
        <div class="pagination-container">
            <nav aria-label="Timesheet pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <button id="prevPage" class="page-link">
                            <i class="fas fa-chevron-left"></i> Previous
                        </button>
                    </li>
                    <li class="page-item disabled">
                        <span id="currentPage" class="page-link">Page 1</span>
                    </li>
                    <li class="page-item">
                        <button id="nextPage" class="page-link">
                            Next <i class="fas fa-chevron-right"></i>
                        </button>
                    </li>
                </ul>
            </nav>
        </div>
        
        <!-- User Management Section -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-users-cog"></i> User Management</h5>
                <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addUserModal">
                    <i class="fas fa-user-plus"></i> Add New User
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="usersTable">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-id-badge"></i> Username</th>
                                <th><i class="fas fa-user"></i> Full Name</th>
                                <th><i class="fas fa-user-tag"></i> Role</th>
                                <th><i class="fas fa-clock"></i> Status</th>
                                <th><i class="fas fa-cogs"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof users !== 'undefined' && users.length > 0) { %>
                                <% users.forEach(user => { %>
                                    <tr>
                                        <td><%= user.username %></td>
                                        <td><%= user.name %></td>
                                        <td>
                                            <span class="badge <%= user.role === 'admin' ? 'bg-danger' : 'bg-info' %>">
                                                <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge <%= user.active ? 'bg-success' : 'bg-secondary' %>">
                                                <%= user.active ? 'Active' : 'Inactive' %>
                                            </span>
                                        </td>
                                        <td>
                                            <button class="btn btn-info btn-sm edit-user" data-user-id="<%= user.id %>">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm delete-user" data-user-id="<%= user.id %>">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center">No users found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Add User Modal -->
        <div class="modal fade" id="addUserModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="fas fa-user-plus"></i> Add New User</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form id="addUserForm" method="POST" action="/admin/api/users">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" required>
                            </div>
                            <div class="mb-3">
                                <label for="fullName" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="fullName" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="role" class="form-label">Role</label>
                                <select class="form-select" id="role" required>
                                    <option value="employee">Employee</option>
                                    <option value="admin">Admin</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Initial Password</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="password" required>
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Create User</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Page specific scripts -->
    <script src="/js/admin.js"></script>
</body>
</html>